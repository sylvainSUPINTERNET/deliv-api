generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model Store {
    id String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    email String
    phoneNumber String
    products Json[]
    slug String // URL to see the page
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
